﻿﻿<MudCard>
    <MudCardMedia Image="images/cardArtista.png"></MudCardMedia>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@AMusica!.Nome</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body2">Artista/Banda:@AMusica!.NomeArtista</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Color="Color.Warning"
                   Variant="Variant.Outlined"
                   Href=@($"/EditarMusica/{AMusica!.Nome}")>Detalhes</MudButton>
    </MudCardActions>
</MudCard>

@code {
    [Parameter]
    public MusicaResponse? AMusica { get; set; }

}